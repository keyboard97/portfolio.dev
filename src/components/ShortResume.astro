---
import type { LocaleType } from "../i18n";
import { useTranslations } from "../i18n";
import SectionSelector from "./SectionSelector.astro";
import SocialLinks from "./SocialLinks.astro";

const t = useTranslations(Astro.currentLocale as LocaleType);
---

<div class="flex flex-col justify-between w-1/3 h-[60%] fixed">
  <div class="flex flex-col gap-3">
    <h1 class="text-5xl font-bold">{t("info.resume.name")}</h1>
    <h3 class="text-xl">{t("info.resume.position")}</h3>
    <p class="text-base w-3/4">{t("info.resume.description")}</p>
  </div>

  <SectionSelector />
  <SocialLinks />
</div>
